<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/day_border"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textScaleX="1.2"
        android:text="01"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_below="@id/tvMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textScaleX="1.2"
        android:text="21"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvMonth"
        android:layout_alignBottom="@id/tvMonth"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:ems="25"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvDay"
        android:layout_alignTop="@id/tvDay"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:ems="25"
        android:text="TextView" />
</RelativeLayout>